{
  "name": "recta-host",
  "productName": "recta-host",
  "version": "0.1.0",
  "description": "Direct printing from JS",
  "main": "src/js/index.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "NODE_ENV=test mocha",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "eslint --ext .js,.vue,.html src/ test/",
    "fix": "eslint --fix --ext .js,.vue,.html src/ test/",
    "ci": "npm run lint && electron-forge package -a $BUILD_ARCH && npm run test"
  },
  "keywords": [
    "printer"
  ],
  "author": {
    "name": "Ade Novid",
    "email": "adenvt@gmail.com",
    "url": "http://adenovid.net"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "asar": true,
        "ignore": [
          "^/\\.",
          "^/[\\w\\.]+\\.log$",
          "^/yarn",
          "^/node_modules/uws"
        ],
        "appCopyright": "Copyright (C) 2017 Ade Novid.",
        "icon": "src/img/icons/win/icon.ico",
        "win32metadata": {
          "CompanyName": "Recta",
          "FileDescription": "Recta Host",
          "InternalName": "Recta Host",
          "ProductName": "Recta Host",
          "OriginalFilename": "recta-host.exe"
        }
      },
      "electronWinstallerConfig": {
        "name": "recta_host",
        "iconUrl": "https://raw.githubusercontent.com/adenvt/recta-host/feature/buildonwindows/src/img/icons/win/icon.ico",
        "setupIcon": "src/img/icons/win/icon.ico",
        "setupExe": "recta_host_setup.exe",
        "loadingGif": "src/img/animation/loading.gif"
      },
      "electronInstallerDebian": {
        "icon": {
          "48x48": "src/img/icons/png/48x48.png",
          "64x64": "src/img/icons/png/64x64.png",
          "128x128": "src/img/icons/png/128x128.png",
          "256x256": "src/img/icons/png/256x256.png"
        }
      },
      "electronInstallerRedhat": {
        "icon": {
          "48x48": "src/img/icons/png/48x48.png",
          "64x64": "src/img/icons/png/64x64.png",
          "128x128": "src/img/icons/png/128x128.png",
          "256x256": "src/img/icons/png/256x256.png"
        }
      },
      "github_repository": {
        "owner": "adenvt",
        "name": "recta-host"
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "rectahost"
      }
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.1",
    "electron-compile": "^6.4.1",
    "electron-config": "^1.0.0",
    "electron-devtools-installer": "^2.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "lodash": "^4.17.4",
    "serialport": "^5.0.0-beta8",
    "socket.io": "^2.0.3",
    "usb": "git+https://github.com/tessel/node-usb.git#1.3.0",
    "vue": "^2.1.7",
    "vueify": "^9.4.1"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "electron-prebuilt-compile": "1.6.11",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "beta",
    "mocha": "^3.5.0",
    "spectron": "^3.7.2"
  }
}
